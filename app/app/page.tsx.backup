    try {
      console.log("ðŸ—‘ï¸ DASHBOARD DELETE ROOM CLICKED!", { roomId: room.id, roomName: room.name })
      
      // Perform safety analysis first
      const response = await fetch(`/api/rooms/${room.id}/safety-analysis`)
      
