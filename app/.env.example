
# GarageGrid Lite - Environment Variables Template
# Copy this to .env and update with your actual values

# Database Connection
DATABASE_URL="postgresql://username:password@host:port/database"

# Authentication Configuration
# IMPORTANT: Update NEXTAUTH_URL to your actual deployment domain
NEXTAUTH_URL="https://your-domain.com"  # Use http://localhost:3000 for development
NEXTAUTH_SECRET="your-secure-random-secret-minimum-32-characters"

# API Keys
ABACUSAI_API_KEY="your-abacus-ai-api-key"

# App Configuration
NEXT_PUBLIC_APP_NAME="GarageGrid_Lite"
NODE_ENV="production"  # Set to "development" for local development
