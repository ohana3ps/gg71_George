FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy dependency manifests first (for caching)
COPY package*.json ./
COPY pnpm-lock.yaml* ./

# Install dependencies
RUN pnpm install --strict-peer-dependencies=false

# Copy the rest of the app (including tsconfig.json, next.config.js, etc.)
COPY . .

# Ensure tsconfig.json is copied
# (you could also be explicit if needed)
# COPY tsconfig.json ./

# Build the Next.js app
RUN pnpm run build

# Expose port
EXPOSE 3000

# Start the app
CMD ["pnpm", "start"]